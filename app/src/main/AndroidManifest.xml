<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.curso.worldwonders" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_btfit"
        android:label="@string/app_name"
        android:theme="@style/WWTheme" >
        <activity
            android:name=".ui.LoginActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.RegisterActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_main" >

        </activity>
        <provider
            android:name="com.curso.worldwonders.database.provider.WorldWondersContentProvider"
            android:authorities="com.curso.worldwonders" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
